{
    particles_dispersedIn_water
    {
        type            SaffmanMei;
        residualRe      1e-6;
    }
}

wallLubrication
{}

turbulentDispersion
{
    particles_dispersedIn_water
    {
        type            Burns;
        sigma           1;
    }
}

