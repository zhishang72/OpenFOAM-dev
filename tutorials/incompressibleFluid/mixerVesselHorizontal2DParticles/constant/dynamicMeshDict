FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{
    type            motionSolver;

    libs            ("libfvMotionSolvers.so");

    motionSolver    motionSolverList;

    solvers
    {
        rotor
        {
            motionSolver    solidBody;

            cellZone        rotor;

            solidBodyMotionFunction  rotatingMotion;

            origin        (0 0 0);
            axis          (0 0 1);

            omega         60 [rpm];
        }

        stator
        {
            motionSolver    solidBody;

            cellZone        stator;

            solidBodyMotionFunction  rotatingMotion;

            origin        (0 0 0);
            axis          (0 0 -1);

            omega         60 [rpm];
        }
    };
}


