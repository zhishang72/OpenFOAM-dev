type            coded;

libs            ("libutilityFunctionObjects.so");

name            R;

codeInclude
#{
    #include "volFields.H"
#};

codeWrite
#{
    const tensor XY(1, 0, 0, 0, 1, 0, 0, 0, 0);

    volScalarField
    (
        IOobject
        (
            "R",
            mesh().time().name(),
            mesh()
        ),
        mag(XY & mesh().C())
    ).write();
#};

