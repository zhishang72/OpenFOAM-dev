FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            multiCycleConstantbXiIgnition;

    select          cellZone;
    cellZone        ignition;

    period          720;

    start           715;
    duration        15;
    strength        20;
    combustionDuration 245;

    XiCorr
    {
        type            cylindrical;
        select          all;
        thickness       0.05;
        cylinderFraction 1;
    }
}


