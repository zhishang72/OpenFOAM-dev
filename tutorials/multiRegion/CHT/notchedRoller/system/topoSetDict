FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "blockMeshDict"

actions
(
    {
        action  new;
        type    cellSet;
        name    rotating;
        source  cylinderToCell;
        point1  (0 0 -1);
        point2  (0 0 1);
        radius  #calc "$<scalar>convertToMeters * $<scalar>R";
    }
    {
        action  new;
        type    cellZoneSet;
        name    rotating;
        source  setToCellZone;
        set     rotating;
    }
);

