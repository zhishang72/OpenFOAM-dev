FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      functions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeFunc fieldAverage(U, p, prime2Mean = yes)

#includeFunc uniform
(
    fieldType = volScalarField,
    field = half,
    dimensions = [],
    value = 0.5
)

#includeFunc tr(UPrime2Mean)

#includeFunc multiply(half, tr(UPrime2Mean), result = k)

#includeFunc graphLayerAverage
(
    name = layerAverage,
    patches = (bottomWall),
    axis = y,
    symmetric = yes,
    pMean,
    pPrime2Mean,
    UMean,
    UPrime2Mean,
    k
);

