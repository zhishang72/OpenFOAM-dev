FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system/fluid";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|rhoFinal)"
    {
        solver          diagonal;
    }

    "(p|p_rgh)"
    {
        solver          PCG; //GAMG;
        preconditioner  DIC;
        smoother        GaussSeidel;
        tolerance       1e-7;
        relTol          0.01;
        maxIter         100;
    }

    "(p|p_rgh)Final"
    {
        $p_rgh;
        relTol          0;
    }

    "pcorr.*"
    {
        $p;
        tolerance       0.1;
        relTol          0;
    }

    "(U|e|k|epsilon|omega)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.1;
        minIter         1;
    }

    "(U|e|k|epsilon|omega)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors     2;
    nNonOrthogonalCorrectors 1;
    correctMeshPhi  no;
    pRefCell        0;
    pRefValue       0;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}

