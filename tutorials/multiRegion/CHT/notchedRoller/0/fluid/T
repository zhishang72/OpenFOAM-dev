FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 297;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    atmosphere
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    "nonCouple.*"
    {
        type            zeroGradient;
    }

    "fluid_to_.*"
    {
        type            coupledTemperature;
        value           $internalField;
    }

    fluidSolid_on_nonCoupleRotating
    {
        type            coupledTemperature;
        value           $internalField;
    }

    fluidRoller_on_nonCoupleStationary
    {
        type            coupledTemperature;
        value           $internalField;
    }
}

