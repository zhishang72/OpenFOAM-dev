FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    inlet
    {
        type            waveTransmissive;
        gamma           1.4;
        value           $internalField;
    }

    outlet
    {
        type            waveTransmissive;
        gamma           1.4;
        fieldInf        1e5;
        lInf            0.05;
        value           $internalField;
    }

    sides
    {
        type            empty;
    }
}

// ************************************************************************* //
