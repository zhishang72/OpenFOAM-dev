FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      functions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

rigidBodyState
{
    type           rigidBodyState;
    libs           ("librigidBodyState.so");
    angleUnits     [deg];
    angularVelocityUnits [deg/s];
}

rigidBodyForces
{
    type            rigidBodyForces;
    libs            ("librigidBodyForces.so");
    body            floatingObject;
    patches         (floatingObject);
    log             on;
    writeControl    timeStep;
    writeInterval   1;
}

