FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

mover
{
    type            motionSolver;

    libs            ("libfvMotionSolvers.so");

    motionSolver    solidBody;

    select          all;

    solidBodyMotionFunction sixDoFMotion;

    CofG            (0 0 0);

    translation
    {
        type            table;
        file            "$FOAM_CASE/constant/6DoF.dat";
        columns         (0 1);
    }

    rotation
    {
        type            table;
        file            "$FOAM_CASE/constant/6DoF.dat";
        columns         (0 2);
    }
}


